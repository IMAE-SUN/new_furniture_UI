<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/butter_light">

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/butter_light"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:elevation="0dp">

            <Toolbar
                android:id="@+id/toolbar_recom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:popupTheme="@style/AppTheme.PopupOverlay"
                app:theme="@style/AppTheme.Toolbar">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_medium"
                            android:text="Recommendation Page"
                            android:textColor="@color/fur_darkNavy"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="36dp"
                            android:layout_height="36dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:src="@drawable/ic_baseline_emoji_emotions" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:orientation="horizontal"
                        android:weightSum="100">

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="80"
                            android:background="@drawable/butter_navy_rounded_shape"
                            android:drawableLeft="@drawable/ic_search_gray_24dp"
                            android:drawablePadding="8dp"
                            android:fontFamily="@font/notosanskr_medium"
                            android:hint="Searching for new furnitures?"
                            android:padding="12dp"
                            android:textColorHint="@color/butter_navy" />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="28dp"
                            android:layout_gravity="center"
                            android:layout_weight="20"
                            android:src="@drawable/filter_icon" />

                    </LinearLayout>
                </LinearLayout>


            </Toolbar>

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:tabGravity="fill"
                app:tabSelectedTextColor="#000000"
                app:tabTextColor="#9ea1b0">

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Explore" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cars" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Trucks" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scooters" />

                <com.google.android.material.tabs.TabItem
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Helicopters" />

            </TableLayout>

        </com.google.android.material.appbar.AppBarLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            app:layout_behavior="@string/appbar_scrolling_view_behavior">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginRight="16dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/notosanskr_medium"
                        android:text="What's your style?"
                        android:textColor="@color/fur_darkNavy"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/linearLayout_whatsyourstyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <Button
                            android:id="@+id/camera_recom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Camera"
                            android:layout_weight="5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/butter_light"/>

                        <Button
                            android:id="@+id/gallery_recom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Gallery"
                            android:layout_weight="5"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textColor="@color/butter_light"/>
                    </LinearLayout>


                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginVertical="8dp"
                        android:scrollbars="none"
                        android:layout_marginHorizontal="5dp"
                        android:background="@drawable/butter_navy_full_rounded_shape">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_margin="5dp">

                            <ImageView
                                android:id="@+id/img_whatsyourstle_1"
                                android:layout_width="220dp"
                                android:layout_height="110dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/butter_light_full_rounded_shape"
                                android:src="@drawable/ic_baseline_home" />

                            <ImageView
                                android:id="@+id/img_whatsyourstle_2"
                                android:layout_width="220dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/butter_light_full_rounded_shape"
                                android:src="@drawable/ic_baseline_home" />

                            <ImageView
                                android:id="@+id/img_whatsyourstle_3"
                                android:layout_width="220dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/butter_light_full_rounded_shape"
                                android:src="@drawable/ic_baseline_home" />

                            <ImageView
                                android:id="@+id/img_whatsyourstle_4"
                                android:layout_width="220dp"
                                android:layout_height="110dp"
                                android:layout_marginLeft="4dp"
                                android:layout_marginRight="4dp"
                                android:background="@drawable/butter_light_full_rounded_shape"
                                android:src="@drawable/ic_baseline_home" />

                        </LinearLayout>

                    </HorizontalScrollView>

                    <Button
                        android:id="@+id/recommend_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="get recommendations!"
                        android:layout_gravity="center"
                        android:textColor="@color/butter_light"
                        android:backgroundTint="@color/butter_red"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosanskr_medium"
                            android:text="Our recommendations based on your pictures are..."
                            android:textColor="@color/fur_darkNavy"
                            android:textSize="12sp"
                            android:textStyle="bold"
                            android:layout_weight="9"
                            android:layout_gravity="center"/>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="10"
                            android:layout_gravity="center">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/notosanskr_medium"
                                android:text="Click refresh to refresh the results"
                                android:textColor="@color/butter_navy"
                                android:textSize="12sp"
                                android:layout_gravity="center"
                                android:layout_weight="9"
                                android:layout_marginRight="10dp" />

                            <ImageButton
                                android:id="@+id/refresh_imgbtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:text="refresh"
                                android:textSize="10sp"
                                android:adjustViewBounds="true"
                                android:src="@drawable/ic_baseline_refresh"
                                android:background="@color/butter_light"/>

                        </LinearLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:weightSum="100">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_recom_a"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_baseline_home" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:id="@+id/img_recom_a_1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_baseline_home" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/gray_rounded_shape"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:padding="8dp"
                                        android:text="상세정보"
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="파로마 앤드리 LED침대 Q "
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="379000₩"
                                        android:textColor="@color/fur_medium"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_marginRight="4dp"
                                        android:src="@drawable/bookmark" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="44dp"
                                        android:src="@drawable/ic_timeline_gray_24dp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="0dp"
                                        android:src="@drawable/ic_more_horiz_gray_24dp" />

                                </RelativeLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            android:layout_weight="50"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_recom_b"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:src="@drawable/ic_baseline_home"
                                    android:scaleType="fitXY"
                                    />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:id="@+id/img_recom_b_1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_baseline_home" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/gray_rounded_shape"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:padding="8dp"
                                        android:text="상세정보"
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="느웰베드 아이번 LED침대 K "
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="968000₩"
                                        android:textColor="@color/fur_medium"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_marginRight="4dp"
                                        android:src="@drawable/bookmark" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="44dp"
                                        android:src="@drawable/ic_timeline_gray_24dp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="0dp"
                                        android:src="@drawable/ic_more_horiz_gray_24dp" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:paddingBottom="8dp"
                        android:weightSum="100">

                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_recom_c"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:scaleType="fitXY"
                                    android:src="@drawable/ic_baseline_home" />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:id="@+id/img_recom_c_1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_baseline_home" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/gray_rounded_shape"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:padding="8dp"
                                        android:text="상세정보"
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="에이스 BRA 1430-N 침대 SS "
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="1078170₩"
                                        android:textColor="@color/fur_medium"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_marginRight="4dp"
                                        android:src="@drawable/bookmark" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="44dp"
                                        android:src="@drawable/ic_timeline_gray_24dp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="0dp"
                                        android:src="@drawable/ic_more_horiz_gray_24dp" />

                                </RelativeLayout>

                            </LinearLayout>


                        </androidx.cardview.widget.CardView>


                        <androidx.cardview.widget.CardView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="4dp"
                            app:cardElevation="4dp"
                            android:layout_weight="50"
                            app:cardUseCompatPadding="true">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/img_recom_d"
                                    android:layout_width="match_parent"
                                    android:layout_height="110dp"
                                    android:src="@drawable/ic_baseline_home"
                                    android:scaleType="fitXY"
                                    />

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="-16dp"
                                    android:layout_marginLeft="8dp"
                                    android:layout_marginRight="8dp"
                                    android:layout_marginBottom="8dp">

                                    <ImageView
                                        android:id="@+id/img_recom_d_1"
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:src="@drawable/ic_baseline_home" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:background="@drawable/gray_rounded_shape"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:padding="8dp"
                                        android:text="상세정보"
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp" />

                                </RelativeLayout>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:orientation="vertical"
                                    android:layout_margin="8dp">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginBottom="4dp"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="리바트 온라인 토스트 침대 Q "
                                        android:textColor="@color/fur_darkNavy"
                                        android:textSize="14sp"
                                        android:textStyle="bold" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:fontFamily="@font/notosanskr_medium"
                                        android:text="523520₩"
                                        android:textColor="@color/fur_medium"
                                        android:textSize="12sp" />


                                </LinearLayout>

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="8dp">

                                    <ImageView
                                        android:layout_width="36dp"
                                        android:layout_height="36dp"
                                        android:layout_marginRight="4dp"
                                        android:src="@drawable/bookmark" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_centerVertical="true"
                                        android:layout_marginLeft="44dp"
                                        android:src="@drawable/ic_timeline_gray_24dp" />

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_alignParentRight="true"
                                        android:layout_centerVertical="true"
                                        android:layout_marginRight="0dp"
                                        android:src="@drawable/ic_more_horiz_gray_24dp" />

                                </RelativeLayout>

                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>
    </androidx.coordinatorlayout.widget.CoordinatorLayout>
</FrameLayout>
