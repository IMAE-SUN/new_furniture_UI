            <!--2번째 질문-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/lightgray_rounded_shape">
                <TextView
                    android:id="@+id/txt_question_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="2. 현재 관심있는 가구는? (중복가능)"
                    android:textSize="20sp"
                    android:fontFamily="@font/notosanskr_medium"
                    android:textColor="@color/fur_darkNavy"
                    android:layout_marginLeft="10dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginRight="10dp">
                    <CheckBox
                        android:id="@+id/cb_question_2_sofa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="소파"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_sofatable"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="거실테이블"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_dining"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="식탁"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_chair"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="의자"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_bed"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="침대"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="100"
                    android:layout_marginRight="10dp">
                    <CheckBox
                        android:id="@+id/cb_question_2_shelf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="선반"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_study"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="공부용"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_child"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아이용"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                    <CheckBox
                        android:id="@+id/cb_question_2_interior"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="인테리어소품"
                        android:textColor="@color/fur_darkNavy"
                        android:fontFamily="@font/notosanskr_medium"
                        android:layout_weight="25"/>
                </LinearLayout>
            </LinearLayout>

            <!--마지막 문구-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/text_seekbar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:layout_gravity="center"
                    android:textColor="@color/black"/>

                <SeekBar
                    android:id="@+id/seekbar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:max="100"
                    android:progress="0"
                    android:thumb="@drawable/seekbar_thumb"
                    android:progressDrawable="@drawable/seekbar"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="저장된 내용은 앞으로 이용하실 추천 시스템에 기반이 됩니다."
                    android:textColor="@color/fur_pale"
                    android:fontFamily="@font/notosanskr_medium"
                    android:gravity="center"/>

                <Button
                    android:id="@+id/save_personal_recommendation_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="save"
                    android:textColor="@color/fur_darkNavy"
                    android:layout_gravity="center"
                    android:layout_marginTop="3dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="사용하고 싶지 않으시다면 off 해주시면 됩니다."
                    android:textColor="@color/fur_medium"
                    android:fontFamily="@font/notosanskr_medium"
                    android:gravity="center"/>
