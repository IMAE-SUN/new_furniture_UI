                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/deep_clear_livingroom"/>
                    </LinearLayout>
                </LinearLayout>




